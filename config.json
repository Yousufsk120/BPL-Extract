{
  "scraping": {
    "max_retries": 3,
    "retry_delay": 1,
    "timeout": 10,
    "user_agent": "BPL-Extract/1.0 Political Intelligence Bot"
  },
  "targets": {
    "news_sources": [
      "https://example.com/bengal-news",
      "https://example.com/political-updates"
    ],
    "social_media": {
